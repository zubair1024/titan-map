# OSM Stack Configuration
# Smallest test dataset: Monaco (646 KB)

# Region Configuration
OSM_REGION=monaco
PBF_URL=https://download.geofabrik.de/europe/monaco-latest.osm.pbf
POLY_URL=https://download.geofabrik.de/europe/monaco.poly
REPLICATION_URL=https://download.geofabrik.de/europe/monaco-updates/

# Alternative Small Regions (uncomment to use):
# Liechtenstein (3.1 MB)
# PBF_URL=https://download.geofabrik.de/europe/liechtenstein-latest.osm.pbf
# POLY_URL=https://download.geofabrik.de/europe/liechtenstein.poly
# REPLICATION_URL=https://download.geofabrik.de/europe/liechtenstein-updates/

# Maldives (~2-3 MB)
# PBF_URL=https://download.geofabrik.de/asia/maldives-latest.osm.pbf
# POLY_URL=https://download.geofabrik.de/asia/maldives.poly
# REPLICATION_URL=https://download.geofabrik.de/asia/maldives-updates/

# Service Ports
NGINX_PORT=8000
TILE_SERVER_PORT=80
NOMINATIM_PORT=8080
OSRM_PORT=5000

# Tile Server Configuration
TILE_SERVER_THREADS=4
TILE_SERVER_SHM_SIZE=192m

# OSRM Configuration
OSRM_PROFILE=car
# Available profiles: car, bicycle, foot

# Update Settings
ENABLE_TILE_UPDATES=enabled
ENABLE_NOMINATIM_UPDATES=true
